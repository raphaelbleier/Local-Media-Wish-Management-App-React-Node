# JWT Secret Key - Use a strong, random string (at least 32 characters)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_random_jwt_secret_here_at_least_32_characters_long

# TMDb API Read Access Token (v4 Auth)
# Get your token from: https://www.themoviedb.org/settings/api
TMDB_API_READ_TOKEN=your_tmdb_api_read_access_token_here

# Server Port (default: 3001)
PORT=3001

# Node Environment (development, production)
NODE_ENV=development

# CORS Allowed Origins (comma-separated for production)
# Example: CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
# Maximum number of requests per window per IP
RATE_LIMIT_MAX=100

# Rate limit window in minutes
RATE_LIMIT_WINDOW_MS=15

# JWT Token Expiry
# Examples: 1h, 24h, 7d
JWT_EXPIRY=24h

# Default Admin Password (optional - defaults to 'admin' if not set)
# It's STRONGLY recommended to set a secure password here
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password_here
